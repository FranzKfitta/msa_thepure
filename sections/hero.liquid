{{ 'section-hero.css' | asset_url | stylesheet_tag }}
{{ 'hero.js' | asset_url | script_tag }}

<div class="hero hero--{{ section.settings.height }}" {% if section.settings.image and section.settings.video == blank %}style="background-image: url({{ section.settings.image | image_url: width: 1920 }});"{% endif %}>
  {% if section.settings.video %}
    <video 
      class="hero__video" 
      autoplay 
      muted 
      loop 
      playsinline
      {% if section.settings.image %}poster="{{ section.settings.image | image_url: width: 1920 }}"{% endif %}
    >
      <source 
        src="{{ section.settings.video.sources[0].url }}" 
        type="video/mp4"
      >
      Your browser does not support the video tag.
    </video>
  {% endif %}
  <div class="hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  
  {% if section.settings.heading or section.settings.subheading or section.settings.button_text %}
    <div class="hero__content hero__text--{{ section.settings.text_alignment }}">
      {% if section.settings.heading %}
        <h1 class="hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.subheading %}
        <p class="hero__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% if section.settings.button_text and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image (also used as video poster)"
    },
    {
      "type": "video_picker",
      "id": "video",
      "label": "Background video (from Shopify library)"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Welcome to our store",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 30,
      "label": "Overlay opacity"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
