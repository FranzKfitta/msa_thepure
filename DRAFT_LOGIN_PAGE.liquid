This template creates a modern, elegant split-screen login experience with:
- Left section: Hero image with brand messaging
- Right section: Clean, minimalist login form

Features:
- Responsive design (desktop split-screen, tablet/mobile stacked)
- Theme variable integration
- Full accessibility support
- Smooth animations and transitions
{%- endcomment -%}

<div class="auth-page auth-page--login">
  <div class="auth-container">
    <!-- Left Section: Hero Image & Brand Story -->
    <section class="auth-split__left">
      <div class="auth-hero">
        {%- if settings.auth_hero_image -%}
          <img 
            class="auth-hero__image" 
            src="{{ settings.auth_hero_image | image_url: width: 600 }}"
            alt="Brand story"
            loading="lazy"
          >
        {%- else -%}
          <div class="auth-hero__placeholder">
            <svg class="auth-hero__icon" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/>
            </svg>
          </div>
        {%- endif -%}

        {%- if settings.auth_hero_tagline -%}
          <div class="auth-hero__content">
            <p class="auth-hero__tagline">{{ settings.auth_hero_tagline }}</p>
          </div>
        {%- else -%}
          <div class="auth-hero__content">
            <p class="auth-hero__tagline">Welcome back. Explore our latest collections.</p>
          </div>
        {%- endif -%}
      </div>
    </section>

    <!-- Right Section: Login Form -->
    <section class="auth-split__right">
      <div class="auth-form-container">
        <!-- Form Header -->
        <div class="auth-form__header">
          <h1 class="auth-form__title">{{ 'auth.login.title' | t: default: 'Sign In' }}</h1>
          <p class="auth-form__subtitle">
            {{ 'auth.login.subtitle' | t: default: 'Access your account and order history' }}
          </p>
        </div>

        <!-- Login Form -->
        <form method="post" action="/account/login" class="auth-form">
          {%- if form.errors -%}
            <div class="auth-form__error-alert" role="alert">
              <svg class="auth-form__error-icon" viewBox="0 0 24 24" aria-hidden="true">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
              </svg>
              <div class="auth-form__error-message">
                <strong>{{ 'auth.form.error' | t: default: 'Error' }}</strong>
                <p>{{ form.errors | default_errors }}</p>
              </div>
            </div>
          {%- endif -%}

          <!-- Email Field -->
          <div class="form-group">
            <label for="email" class="form-label">
              {{ 'auth.login.email' | t: default: 'Email Address' }}
            </label>
            <input 
              type="email" 
              name="email" 
              id="email"
              class="form-input"
              placeholder="you@example.com"
              required
              autocomplete="email"
              {% if form.email %}value="{{ form.email }}"{% endif %}
              aria-required="true"
              aria-describedby="email-error"
            >
            {%- if form.errors.email -%}
              <span class="form-error" id="email-error">
                {{ form.errors.email }}
              </span>
            {%- endif -%}
          </div>

          <!-- Password Field -->
          <div class="form-group">
            <div class="form-label-row">
              <label for="password" class="form-label">
                {{ 'auth.login.password' | t: default: 'Password' }}
              </label>
              <a href="/account/recover" class="form-link form-link--password">
                {{ 'auth.login.forgot' | t: default: 'Forgot?' }}
              </a>
            </div>
            <input 
              type="password" 
              name="password" 
              id="password"
              class="form-input"
              placeholder="••••••••"
              required
              autocomplete="current-password"
              aria-required="true"
              aria-describedby="password-error"
            >
            {%- if form.errors.password -%}
              <span class="form-error" id="password-error">
                {{ form.errors.password }}
              </span>
            {%- endif -%}
          </div>

          <!-- Remember Me (Optional) -->
          <div class="form-group form-group--checkbox">
            <input 
              type="checkbox" 
              name="remember" 
              id="remember"
              class="form-checkbox"
              value="on"
            >
            <label for="remember" class="form-label form-label--checkbox">
              {{ 'auth.login.remember' | t: default: 'Remember me' }}
            </label>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="button button--primary button--full">
            {{ 'auth.login.submit' | t: default: 'Sign In' }}
          </button>
        </form>

        <!-- Sign Up Link -->
        <div class="auth-form__footer">
          <p class="auth-form__footer-text">
            {{ 'auth.login.no_account' | t: default: 'Don't have an account?' }}
            <a href="/account/register" class="form-link form-link--emphasis">
              {{ 'auth.login.create' | t: default: 'Create one' }}
            </a>
          </p>
        </div>

        <!-- Optional: Continue Shopping -->
        <div class="auth-form__footer-secondary">
          <a href="/" class="form-link form-link--secondary">
            {{ 'auth.login.continue_shopping' | t: default: 'Continue Shopping' }}
          </a>
        </div>
      </div>
    </section>
  </div>
</div>

