{% unless product.type contains 'Gift' or product.gift_card %}
<div class="product-card">
  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__image-wrapper">
      {% if product.featured_media %}
        <img
          src="{{ product.featured_media | image_url: width: 800 }}"
          srcset="
            {{ product.featured_media | image_url: width: 400 }} 400w,
            {{ product.featured_media | image_url: width: 600 }} 600w,
            {{ product.featured_media | image_url: width: 800 }} 800w,
            {{ product.featured_media | image_url: width: 1000 }} 1000w
          "
          sizes="(min-width: 1200px) 22vw, (min-width: 990px) 25vw, (min-width: 768px) 30vw, (min-width: 600px) 45vw, 48vw"
          alt="{{ product.featured_media.alt | escape }}"
          loading="lazy"
          width="600"
          height="800"
          class="product-card__image"
        >
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder-svg' }}
      {% endif %}
    </div>

    <div class="product-card__info">
      <h3 class="product-card__title">{{ product.title | escape | upcase }}</h3>
      <div class="product-card__price">
        {% render 'price', product: product, price_class: 'product-card__price-text' %}
      </div>
    </div>
  </a>
</div>
{% endunless %}
